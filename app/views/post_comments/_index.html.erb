<p>コメント件数:<%= post.post_comments.count %></p>
<% post.post_comments.each do |post_comment| %>
<tr>
  <th><%= attachment_image_tag post_comment.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpeg" %></th>
  <td>名前<%= post_comment.user.name %></td>
  <th><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></th>
</tr>
  <% if post_comment.user == current_user %>
    <div class = "comment-delete">
     <%= link_to "Destroy", post_post_comment_path(post_comment.post, post_comment), class: 'btn-sm btn-danger', remote: true, method: :delete %>
    </div>
  <% end %>
<% end %>
