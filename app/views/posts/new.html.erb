  <div class = "container">
    <div class = "row no-gutters">
      <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
        <h3 class = "container"><i class="far fa-smile-beam"></i>画像投稿フォーム</h3>
        <div class = "form-body p-4">
            <% if @post.errors.any? %>
              <%= @post.errors.count %>件のエラーが発生しました
              <% @post.errors.full_messages.each do |message| %>
                <%= message %>
              <% end %>
            <% end %>

          <%= form_with model: @post, local:true do |f| %>
            <h4>画像</h4>
              <%= f.attachment_field :image, class:"w-100" %>

            <h4>料理名</h4>
              <%= f.text_field :cook_name, class:"form-control", placeholder:"料理名" %>

            <h4>説明</h4>
              <%= f.text_area :description, class:"form-control", rows:"3", placeholder:"コメントここに" %>
              <%= f.submit "投稿", class:"btn btn-lg btn-block btn-info mt-4"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>