
<div class = "container">
  <div class = "row no-gutters">
   <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto rounded px-0 my-5">
    <div class = "search-form">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :content %>
        <%= f.select :model, options_for_select({"ユーザー" => "user", "料理名" => "post"}) %>
        <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
        <%= f.submit '検索'%>
      <% end %>
    </div>
　</div>
 </div>
</div>