<div class = "container">
  <div class = "row no-gutters">
   <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
     <div class = "form-body p-4">
      <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto rounded px-0 my-5">
       <h3>ログイン</h3>
    <p>
      <h5>会員の方はこちらから</h5>
    </p>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      
      <br/>
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>

      <br/>
      <h5>会員登録がお済みでない方</h5>
      <h7><%= link_to "こちら", new_user_registration_path %>から新規登録を行ってください</h7>
     </div>
    </div>
   </div>
  </div>
</div>